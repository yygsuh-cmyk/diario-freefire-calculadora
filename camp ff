<script>
function calcular() {
  const killValor = Number(document.getElementById("killValor").value);
  const posicao = Number(document.getElementById("posicao").value);
  const kills = Number(document.getElementById("kills").value);

  let premioPosicao = 0;

  if (posicao === 1) premioPosicao = Number(primeiro.value);
  else if (posicao === 2) premioPosicao = Number(segundo.value);
  else if (posicao === 3) premioPosicao = Number(terceiro.value);

  // kills s칩 valem at칠 TOP 10
  const killsValidas = posicao <= 10 ? kills : 0;

  const total = premioPosicao + (killsValidas * killValor);

  document.getElementById("resultado").innerHTML = `
    游끥 Posi칞칚o: ${posicao}췈<br>
    游꿢 Kills v치lidas: ${killsValidas}<br>
    游눯 Total a receber: <b>R$ ${total.toFixed(2)}</b>
  `;
}
</script>

